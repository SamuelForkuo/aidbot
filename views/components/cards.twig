{% macro statCard(name="Statistical Name", value="12123", icon="bi bi-eye") %}
    <div class="stat-card">
        <div class="info flex-row flex-between">
            <div class="name">{{name}}</div>
            <div class="icon">
                <i class="{{icon}}"></i>
            </div>
        </div>
        <div class="value orbitron">{{value}}</div>
    </div>
{% endmacro %}