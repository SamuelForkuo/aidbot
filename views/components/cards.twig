
{% macro Simple(title = "Card title here", button="Get Aid", image="images/first_aid_card.jpg", icon="bi bi-balloon-heart") %}
    <div class="card ov-hidden">
        <div class="image">
            <img src="{{asset(image)}}" alt="first aid" class="obj-fit">
        </div>
        <div class="contents">
            <b class="title text-center flex-center">{{title}}</b>
            <button>{{button}} <i class="{{icon}}"></i></button>
        </div>
    </div>
{% endmacro %}


